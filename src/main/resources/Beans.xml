<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="Point10" class="com.example.pkg.Point">
        <constructor-arg index="1" value="7.8"/>
        <constructor-arg index="0" value="1.4"/>
    </bean>
    <bean id="calc" class="com.example.pkg.Calculator">
        <constructor-arg index="0" value="100"/>
        <constructor-arg index="1" value="5"/>
    </bean>
    <bean id="animal" class="com.example.pkg.Animal">
        <constructor-arg index="1" value="50"/>
        <constructor-arg  type="double" value="156"/>
        <constructor-arg value="Eric"/>
    </bean>
</beans>